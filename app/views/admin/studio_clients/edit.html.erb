<div class="list">
  <div class="studio-client">
    <%= image_tag @studio_client.image_url.to_s, class: 'artist-pic' %>
    <span class="info">
      <div class="artist"><%= @studio_client.artist %></div>
      <div class="album"><%= @studio_client.album %></div>
      <div class="role"><%= @studio_client.role %></div>
    </span>
  </div>
  <div class="studio-client">
    <p class="edit-label">
      Front
    </p>
    <img src="<%= @studio_client.image %>" alt="" class="artist-pic"/>
  </div>
  <div class="studio-client">
    <div class="info back">
      <p class="edit-label">
        Back
      </p>
      <div class='artist'>
        <%= @studio_client.artist %>
      </div>

      <div class='album'>
        <%= @studio_client.album %>
      </div>

      <div class='role'>
        <%= @studio_client.role %>
      </div>
    </div>
  </div>
  <div class="studio-client">
    <p class="edit-label">
      Edit
    </p>
    <%= render 'form' %>
    <%= link_to image_tag('delete.png'), admin_studio_client_path(@studio_client), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
