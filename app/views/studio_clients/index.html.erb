<% if notice %>
  <%= content_tag "div", class:'header-info', data: {text: notice, page: 'studio'} do %>
  <% end %>
<% else %>
  <%= content_tag "div", class:'header-info', data: {text: 'bands mixed in the studio', page: 'studio'} do %>
  <% end %>
<% end %>
<div class="list">
  <%= render 'shared/menu' %>
  <% @studio_clients.each do |studio_client| %>
    <div class="studio-client">
      <img src="<%= studio_client.image %>" alt="" class="artist-pic"/>
      <span class="info">
        <div class="artist"><%= studio_client.artist %></div>
        <div class="album"><%= studio_client.album %></div>
        <div class="role"><%= studio_client.role %></div>
        <% if studio_client.soundcloud %>
          <%= studio_client.soundcloud.html_safe %>
        <% end %>
      </span>
    </div>
  <% end %>

</div>
