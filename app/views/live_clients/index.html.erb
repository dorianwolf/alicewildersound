<% if notice %>
  <%= content_tag "div", class:'header-info', data: {text: notice, page: 'live'} do %>
  <% end %>
<% else %>
  <%= content_tag "div", class:'header-info', data: {text: 'bands mixed live', page: 'live'} do %>
  <% end %>
<% end %>
<div class="list">
  <%= render 'shared/menu' %>
  <% @live_clients.each do |live_client| %>
    <div class="live-client">
      <img src="<%= live_client.image %>" alt="" class="artist-pic"/>
      <span class="info">
        <p class="artist"><%= live_client.artist %></p>
        <% if live_client.soundcloud %>
          <%= live_client.soundcloud.html_safe %>
        <% end %>
      </span>
    </div>
  <% end %>
</div>
