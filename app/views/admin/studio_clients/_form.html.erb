<%= form_for([:admin, @studio_client], multipart: true) do |f| %>

  <div class="studio-field artist">
    <%= f.text_field :artist, placeholder: 'artist' %>
  </div>
  <div class="studio-field album">
    <%= f.text_field :album, placeholder: 'album or track' %>
  </div>
  <div class="studio-field role">
    <%= f.text_field :role, placeholder: 'role' %>
  </div>
  <div class="upload">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="studio-field image">
    <%= f.text_field :remote_image_url, placeholder: 'or paste an image link' %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
