<div class="list">
  <p id="notice"><%= notice %></p>
  <div class="studio-client">
    <img src="<%= @studio_client.image %>" alt="" />
  </div>
  <div class="studio-client">
    <%= render 'form' %>
  </div>
  <div class="studio-client">
    <div class="info back">
      <div class='artist'>
        <%= @studio_client.artist %>
      </div>

      <div class='album'>
        <%= @studio_client.album %>
      </div>

      <div class='role'>
        <%= @studio_client.role %>
      </div>

      <% @studio_client.tracks.each do |track| %>
        <div class="track">
          <p> <%= track.title %></p>
          <%= link_to image_tag('delete.png'), admin_studio_client_track_path(@studio_client, track), method: :delete %>
        </div>
      <% end %>
    </div>
  </div>
</div>
